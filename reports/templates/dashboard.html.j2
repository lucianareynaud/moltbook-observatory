<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moltbook Observatory ‚Äî {{ week_id }} Dashboard</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            line-height: 1.6;
            color: #333;
            background: #f5f5f5;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            background: white;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        header {
            border-bottom: 3px solid #2563eb;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }

        h1 {
            font-size: 2rem;
            color: #1e40af;
            margin-bottom: 10px;
        }

        .meta {
            color: #6b7280;
            font-size: 0.9rem;
        }

        .summary-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin: 30px 0;
        }

        .summary-card {
            background: #f9fafb;
            padding: 20px;
            border-radius: 6px;
            border-left: 4px solid #2563eb;
        }

        .summary-card h3 {
            font-size: 0.85rem;
            text-transform: uppercase;
            color: #6b7280;
            margin-bottom: 8px;
        }

        .summary-card .value {
            font-size: 1.8rem;
            font-weight: bold;
            color: #1e40af;
        }

        .section {
            margin: 40px 0;
        }

        .section h2 {
            font-size: 1.5rem;
            color: #1e40af;
            margin-bottom: 20px;
            border-bottom: 2px solid #e5e7eb;
            padding-bottom: 10px;
        }

        .alert {
            padding: 15px 20px;
            border-radius: 6px;
            margin: 15px 0;
            border-left: 4px solid;
        }

        .alert.critical {
            background: #fef2f2;
            border-color: #dc2626;
            color: #991b1b;
        }

        .alert.warning {
            background: #fffbeb;
            border-color: #f59e0b;
            color: #92400e;
        }

        .alert.info {
            background: #eff6ff;
            border-color: #3b82f6;
            color: #1e40af;
        }

        .alert strong {
            display: block;
            margin-bottom: 5px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        table th,
        table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #e5e7eb;
        }

        table th {
            background: #f9fafb;
            font-weight: 600;
            color: #374151;
        }

        table tr:hover {
            background: #f9fafb;
        }

        .chart-container {
            position: relative;
            height: 300px;
            margin: 30px 0;
        }

        footer {
            margin-top: 50px;
            padding-top: 20px;
            border-top: 1px solid #e5e7eb;
            color: #6b7280;
            font-size: 0.85rem;
        }

        .badge {
            display: inline-block;
            padding: 4px 10px;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
        }

        .badge.success {
            background: #d1fae5;
            color: #065f46;
        }

        .badge.warning {
            background: #fef3c7;
            color: #92400e;
        }

        .badge.danger {
            background: #fee2e2;
            color: #991b1b;
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>Moltbook Observatory ‚Äî {{ week_id }}</h1>
            <div class="meta">
                <strong>Reporting Period:</strong> {{ week_start }} to {{ week_end }}<br>
                <strong>Generated:</strong> {{ extracted_at }}<br>
                <strong>Methodology Version:</strong> 0.1.0
            </div>
        </header>

        <!-- Executive Summary -->
        <div class="summary-grid">
            <div class="summary-card">
                <h3>Total Events</h3>
                <div class="value">{{ total_events }}</div>
            </div>
            <div class="summary-card">
                <h3>Availability</h3>
                <div class="value">{{ format_pct(overall_availability) }}</div>
            </div>
            <div class="summary-card">
                <h3>Endpoints</h3>
                <div class="value">{{ endpoints_seen|length }}</div>
            </div>
            <div class="summary-card">
                <h3>Anomalies</h3>
                <div class="value">{{ anomalies|length }}</div>
            </div>
        </div>

        <!-- Anomalies Section -->
        {% if anomalies %}
        <div class="section">
            <h2>Anomaly Alerts</h2>

            {% for anomaly in anomalies_by_severity.critical %}
            <div class="alert critical">
                <strong>üî¥ CRITICAL</strong>
                {{ anomaly.message }}
                {% if anomaly.context %}
                <div style="margin-top: 8px; font-size: 0.9rem;">
                    Context: {{ anomaly.context }}
                </div>
                {% endif %}
            </div>
            {% endfor %}

            {% for anomaly in anomalies_by_severity.warning %}
            <div class="alert warning">
                <strong>‚ö†Ô∏è  WARNING</strong>
                {{ anomaly.message }}
                {% if anomaly.context %}
                <div style="margin-top: 8px; font-size: 0.9rem;">
                    Context: {{ anomaly.context }}
                </div>
                {% endif %}
            </div>
            {% endfor %}

            {% for anomaly in anomalies_by_severity.info %}
            <div class="alert info">
                <strong>‚ÑπÔ∏è  INFO</strong>
                {{ anomaly.message }}
            </div>
            {% endfor %}
        </div>
        {% endif %}

        <!-- Collection Health -->
        <div class="section">
            <h2>Collection Health</h2>

            <table>
                <thead>
                    <tr>
                        <th>Metric</th>
                        <th>Value</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Total Requests</td>
                        <td>{{ total_requests }}</td>
                        <td>‚Äî</td>
                    </tr>
                    <tr>
                        <td>Successful Requests</td>
                        <td>{{ successful_requests }} ({{ format_pct(successful_requests / total_requests if total_requests > 0 else 0) }})</td>
                        <td>
                            {% if overall_availability >= 0.95 %}
                            <span class="badge success">Excellent</span>
                            {% elif overall_availability >= 0.90 %}
                            <span class="badge success">Good</span>
                            {% elif overall_availability >= 0.50 %}
                            <span class="badge warning">Degraded</span>
                            {% else %}
                            <span class="badge danger">Critical</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <td>Failed Requests</td>
                        <td>{{ failed_requests }}</td>
                        <td>‚Äî</td>
                    </tr>
                    <tr>
                        <td>Retried Requests</td>
                        <td>{{ retried_requests }}</td>
                        <td>‚Äî</td>
                    </tr>
                </tbody>
            </table>

            {% if latency_p50_ms is not none %}
            <h3 style="margin-top: 30px;">Latency Profile</h3>
            <table>
                <thead>
                    <tr>
                        <th>Percentile</th>
                        <th>Latency</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>p50 (median)</td>
                        <td>{{ format_ms(latency_p50_ms) }}</td>
                    </tr>
                    <tr>
                        <td>p95</td>
                        <td>{{ format_ms(latency_p95_ms) }}</td>
                    </tr>
                    <tr>
                        <td>p99</td>
                        <td>{{ format_ms(latency_p99_ms) }}</td>
                    </tr>
                </tbody>
            </table>
            {% endif %}

            {% if error_distribution %}
            <h3 style="margin-top: 30px;">Error Distribution</h3>
            <div class="chart-container">
                <canvas id="errorChart"></canvas>
            </div>
            {% endif %}
        </div>

        <!-- Volume Analysis -->
        <div class="section">
            <h2>Volume Analysis</h2>

            {% if volume_change_pct is not none %}
            <p style="margin-bottom: 20px;">
                <strong>Week-over-Week Change:</strong>
                <span style="font-size: 1.2rem; {% if volume_change_pct > 0 %}color: #059669;{% else %}color: #dc2626;{% endif %}">
                    {{ "%+.1f"|format(volume_change_pct) }}%
                </span>
            </p>
            {% endif %}

            {% if events_over_time %}
            <div class="chart-container">
                <canvas id="volumeChart"></canvas>
            </div>
            {% endif %}

            {% if events_by_endpoint %}
            <h3 style="margin-top: 30px;">Events by Endpoint</h3>
            <table>
                <thead>
                    <tr>
                        <th>Endpoint</th>
                        <th>Count</th>
                        <th>Share</th>
                    </tr>
                </thead>
                <tbody>
                    {% for endpoint, count in events_by_endpoint.items() %}
                    <tr>
                        <td><code>{{ endpoint }}</code></td>
                        <td>{{ count }}</td>
                        <td>{{ format_pct(count / total_events if total_events > 0 else 0) }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            {% endif %}
        </div>

        <!-- Payload Characteristics -->
        {% if payload_size_p50 is not none %}
        <div class="section">
            <h2>Payload Characteristics</h2>
            <table>
                <thead>
                    <tr>
                        <th>Metric</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Median Payload Size</td>
                        <td>{{ format_bytes(payload_size_p50) }}</td>
                    </tr>
                    <tr>
                        <td>p95 Payload Size</td>
                        <td>{{ format_bytes(payload_size_p95) }}</td>
                    </tr>
                    <tr>
                        <td>Unique URLs Collected</td>
                        <td>{{ unique_urls }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        {% endif %}

        <footer>
            <p><strong>Report ID:</strong> {{ week_id }}</p>
            <p><strong>Observatory Version:</strong> 0.1.0</p>
            <p>This dashboard is a deterministic transform of raw collection data. All metrics are observable properties of the collection process. See methodology documentation for epistemic constraints and failure modes.</p>
        </footer>
    </div>

    <script>
        // Chart.js configuration
        const chartDefaults = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: true,
                    position: 'top',
                }
            }
        };

        // Volume over time chart
        {% if events_over_time %}
        const volumeCtx = document.getElementById('volumeChart');
        new Chart(volumeCtx, {
            type: 'line',
            data: {
                labels: {{ events_over_time_labels | tojson }},
                datasets: [{
                    label: 'Events Collected',
                    data: {{ events_over_time_values | tojson }},
                    borderColor: '#2563eb',
                    backgroundColor: 'rgba(37, 99, 235, 0.1)',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.3
                }]
            },
            options: {
                ...chartDefaults,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            precision: 0
                        }
                    }
                }
            }
        });
        {% endif %}

        // Error distribution chart
        {% if error_distribution %}
        const errorCtx = document.getElementById('errorChart');
        const errorData = {{ error_distribution | tojson }};
        new Chart(errorCtx, {
            type: 'bar',
            data: {
                labels: Object.keys(errorData),
                datasets: [{
                    label: 'Error Count',
                    data: Object.values(errorData),
                    backgroundColor: '#ef4444',
                    borderColor: '#dc2626',
                    borderWidth: 1
                }]
            },
            options: {
                ...chartDefaults,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            precision: 0
                        }
                    }
                }
            }
        });
        {% endif %}
    </script>
</body>
</html>
